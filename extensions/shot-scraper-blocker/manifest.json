{
  "manifest_version": 3,
  "name": "Shot Scraper Ad Blocker",
  "version": "1.0",
  "description": "Ad blocker for shot-scraper with customizable filter lists",
  "permissions": [
    "declarativeNetRequest",
    "declarativeNetRequestFeedback"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "declarative_net_request": {
    "rule_resources": [{
      "id": "default_rules",
      "enabled": true,
      "path": "rules.json"
    }]
  },
  "action": {
    "default_title": "Shot Scraper Ad Blocker",
    "default_popup": "popup.html"
  }
}